{
	"name": "score-pipeline",
	"properties": {
		"activities": [
			{
				"name": "Store Max Scores on ADX",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "Clear ADX MaxScoresTable",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.00:10:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "AzureSqlSource",
						"sqlReaderQuery": "SELECT * FROM [dbo].[MachineScoreEvents] c\nWHERE [MachineId] in \n    (SELECT\n      [MachineId]\n    FROM [dbo].[MachineScoreEvents] b\n    INNER JOIN (SELECT \n                  [MachineGroup], MAX([Score]) AS group_max_score\n                FROM [dbo].[MachineScoreEvents] WHERE [ReportTime] NOT IN (SELECT [ReportTime] FROM [dbo].[MaxScoreEvents])\n                GROUP BY [MachineGroup]) a ON \n      a.MachineGroup = b.MachineGroup AND a.group_max_score = b.Score) \n\t  ORDER BY [MachineGroup]",
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"sink": {
						"type": "AzureDataExplorerSink"
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "AzureScoreDB",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "AzureDataExplorerTable1",
						"type": "DatasetReference"
					}
				]
			},
			{
				"name": "Store max scores on SQL",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "Store Max Scores on ADX",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "AzureDataExplorerSource",
						"query": "scores",
						"queryTimeout": "00:10:00"
					},
					"sink": {
						"type": "AzureSqlSink",
						"preCopyScript": "TRUNCATE TABLE [dbo].[MaxScoreEvents];",
						"tableOption": "autoCreate",
						"disableMetricsCollection": false
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "AzureDataExplorerTable1",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "AzureMaxScoreDB",
						"type": "DatasetReference"
					}
				]
			},
			{
				"name": "Clear ADX MaxScoresTable",
				"type": "AzureDataExplorerCommand",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"command": ".clear table scores data ",
					"commandTimeout": "00:20:00"
				},
				"linkedServiceName": {
					"referenceName": "AzureDataExplorer1",
					"type": "LinkedServiceReference"
				}
			}
		],
		"annotations": []
	}
}